@model StatusCreateModel
@{
    ViewData["Title"] = "Create New Status";
}

<div class="container-fluid">
    @* <partial name="../Shared/PartialViews/_ResponsePartial.cshtml" /> *@
    <div class="d-flex justify-content-center">
        <div class="col-md-12">
            <div class="card-header">
                <h3 class="card-title">Create New Status</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-antiforgery="true" asp-controller="Status" asp-action="Create" method="post" id="create-form">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="StatusName">Title</label>
                        <input asp-for="StatusName" type="text" class="form-control"
                               id="statusName" name="statusName"
                               placeholder="Status Title">
                    </div>
                    <div class="form-group">
                        <label asp-for="StatusDescription">Description</label>
                        <textarea asp-for="StatusDescription" type="text" class="form-control" placeholder="Description"></textarea>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-sm btn-primary px-3 mr-4">Submit</button>
                    <a type="button" class="btn btn-sm btn-secondary px-3"
                       asp-controller="Status" asp-action="Index">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="../Shared/_ValidationScriptsPartial.cshtml" />
    <script>
           $('#create-form').validate({
            rules: {
                statusName: {
                    required: true,
                }
            },
            messages: {
                statusName: {
                    required: "Title is required",
                }
            },
            errorElement: 'span',
            errorPlacement: function (error, element) {
                error.addClass('invalid-feedback');
                element.closest('.form-group').append(error);
            },
            highlight: function (element, errorClass, validClass) {
                $(element).addClass('is-invalid');
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).removeClass('is-invalid');
            }
        });
    </script>

}

