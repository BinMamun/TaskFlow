@model StatusEditModel
@{
    ViewData["Title"] = "Edit Status";
}

<div class="container-fluid">
    <div class="d-flex justify-content-center">
        <div class="col-md-12">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <form asp-antiforgery="true" asp-controller="Status" asp-action="Edit" method="post" id="update-form">
                <input type="hidden" asp-for="Id" />
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="StatusName">Title</label>
                        <input asp-for="StatusName" type="text" class="form-control"
                               id="statusName" name="statusName"
                               placeholder="Status Title">
                    </div>
                    <div class="form-group">
                        <label asp-for="StatusDescription">Description</label>
                        <textarea asp-for="StatusDescription" type="text" class="form-control" placeholder="Description"></textarea>
                    </div>

                    <div>
                        <button type="submit" class="btn btn-sm btn-primary px-3 mr-4">Submit</button>
                        <a type="button" class="btn btn-sm btn-secondary px-3"
                           asp-controller="Status" asp-action="Index">
                            Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="../Shared/_ValidationScriptsPartial.cshtml" />
    <script>
           $('#update-form').validate({
            rules: {
                statusName: {
                    required: true,
                }
            },
            messages: {
                statusName: {
                    required: "Title is required",
                }
            },
            errorElement: 'span',
            errorPlacement: function (error, element) {
                error.addClass('invalid-feedback');
                element.closest('.form-group').append(error);
            },
            highlight: function (element, errorClass, validClass) {
                $(element).addClass('is-invalid');
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).removeClass('is-invalid');
            }
        });
    </script>

}

