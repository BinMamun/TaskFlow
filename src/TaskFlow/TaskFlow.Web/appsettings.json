{
    "ConnectionStrings": {
        "DefaultConnection": "Host=localhost;Port=5432;Username=postgres;Password=12345;Database=taskflow;"
    },
    "AllowedHosts": "*",
    "Serilog": {
        "Using": [ "Serilog.Sinks.PostgreSQL" ],
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "./Logs/log-.txt",
                    "rollingInterval": "Day",
                    "restrictedToMinimumLevel": "Information"
                }
            },
            {
                "Name": "PostgreSQL",
                "Args": {
                    "connectionString": "Host=localhost;Port=5432;Username=postgres;Password=12345;Database=taskflow;",
                    "tableName": "Logs",
                    "needAutoCreateTable": true,
                    "columnOptionsSection": {
                        "removeStandardColumns": [ "MessageTemplate" ]
                    }
                }
            }
        ]
    }
}
